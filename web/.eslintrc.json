{
  "extends": "react-app",
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-bitwise": ["error", { "allow": ["~"] }],
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": true }],
    "max-len": ["error", { "code": 120 }],
    "import/order": "warn",
    "jsx-a11y/href-no-hash": "off",
    "no-console": "warn",
    "valid-jsdoc": "warn"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  }
}
